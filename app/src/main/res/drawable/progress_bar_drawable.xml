<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="@color/progress_background"
                android:endColor="@color/progress_background"
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="@color/progress_foreground"
                    android:endColor="@color/progress_foreground"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>